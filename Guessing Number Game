#include<stdio.h>
#include<stdlib.h>
#include<time.h>

int main(){

    int random, guess;
    int no_of_guess = 0;
    srand(time(NULL));

    printf("---------------------------------------------------------------------");
    printf("\n");
    printf("Welcome to the world of Guessing Numbers\n");
    random = rand() % 100 + 1;

    for(int i = 1 ; guess != random ; i++){

    
        printf("\nPlease enter your Guess Number between(1 to 100): ");
        scanf("%d" , &guess);
        no_of_guess++;

        if(guess < random){
            printf("Guess a larger Number. \n");
        }
        else if(guess > random){
            printf("Guess a smaller Number. \n");
        }
        else{
            printf("Congratulation!!! You have successfully guessed the Number in %d attempts \n" , no_of_guess);
        }

    }

    
    printf("\n");
    printf("Bye Bye, thanks for Playing. \n");
    printf("Developed by: Ayush");


    return 0;
}
